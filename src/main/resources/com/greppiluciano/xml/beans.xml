<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="persona" class="com.greppiluciano.beans.Persona">
		<property name="pais">
			<bean id="pais" class="com.greppiluciano.beans.Pais">
				<property name="nombre" value="Argentina"></property>
				<property name="ciudad">
					<bean id="ciudad" class="com.greppiluciano.beans.Ciudad">
						<property name="nombre" value="Buenos Aires"></property>
					</bean>	
				</property>
			</bean>
		</property>
		<property name="id" value="1"></property>
		<property name="nombre" value="Luciano"></property>
		<property name="apodo" value="Lucho"></property>

	</bean>
	

	

	
</beans>
