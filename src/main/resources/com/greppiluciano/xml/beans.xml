<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-init-method="init" default-destroy-method="destroy">
	<!--Se agregan en la lÃ­nea de arriba las propiedades default-init-method y default-destroy-method para inicializar y cerrar todos los beans de manera global.-->
	
	<bean id="persona" class="com.greppiluciano.beans.Persona" autowire="byName">
		<property name="apodo" value="Lucho"></property>
	</bean>
	
	<bean id="pais" class="com.greppiluciano.beans.Pais">
		<property name="nombre" value="Argentina"></property>
		
	</bean>

	<bean id="ciudad" class="com.greppiluciano.beans.Ciudad">
		<property name="nombre" value="Buenos Aires"></property>
	</bean>	
	
	<alias name="persona" alias="personaBean"/>
	
</beans>
